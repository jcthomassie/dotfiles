{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cargo check:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo build:*)",
      "Bash(cargo test:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run mypy:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv sync:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(kubectl get:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl logs:*)",
      "Bash(kubectl top:*)",
      "Bash(kubectl explain:*)",
      "Bash(sky status:*)",
      "Bash(sky queue:*)",
      "Bash(sky logs:*)",
      "Bash(sky show-gpus:*)",
      "Bash(sky check:*)",
      "Bash(sky cost-report:*)",
      "Bash(gcloud config list:*)",
      "Bash(gcloud config get:*)",
      "Bash(gcloud projects list:*)",
      "Bash(gcloud projects describe:*)",
      "Bash(gcloud compute instances list:*)",
      "Bash(gcloud compute instances describe:*)",
      "Bash(gcloud container clusters list:*)",
      "Bash(gcloud container clusters describe:*)",
      "Bash(gcloud auth list:*)",
      "Bash(gcloud info:*)",
      "Bash(aws sts get-caller-identity:*)",
      "Bash(aws s3 ls:*)",
      "Bash(aws ec2 describe-:*)",
      "Bash(aws iam list-:*)",
      "Bash(aws iam get-:*)",
      "Bash(aws eks list-:*)",
      "Bash(aws eks describe-:*)",
      "Bash(terraform plan:*)",
      "Bash(terraform fmt:*)",
      "Bash(terraform validate:*)",
      "Bash(terraform show:*)",
      "Bash(terraform output:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(docker ps:*)",
      "Bash(docker logs:*)",
      "Bash(docker images:*)",
      "Bash(docker inspect:*)",
      "Bash(docker compose ps:*)",
      "Bash(docker compose logs:*)",
      "Grep",
      "Read(~/dotfiles/**)",
      "WebSearch",
      "WebFetch"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/bin/zsh $HOME/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true
  }
}
